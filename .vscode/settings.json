{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "always",
      "source.fixAll.ruff": "always"
    }
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.detectIndentation": true
  },
  "[github-actions-workflow]": {
    "editor.formatOnSave": true,
    "editor.detectIndentation": true
  },
  "json.format.enable": true,
  "editor.showUnused": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    // Will fix all auto correctable errors
    "source.fixAll.eslint": "always"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  // Cursor feature to improve the quality of code generated by AI
  // Increases memory consumption notably - https://www.cursor.com/blog/shadow-workspace
  "cursor.general.enableShadowWorkspace": true,
  // Ruff configuration - use custom ruff.toml
  "ruff.enable": true,
  "ruff.configuration": "${workspaceFolder}/ruff.toml"
}
